{
	"$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"recommended": true,
				"noShadowRestrictedNames": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"recommended": true
			},
			"style": {
				"noNonNullAssertion": "off",
				"recommended": true
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			} 
		},
		"ignore": [
			"build/*",
			"node_modules",
			".storybook",
			".next",
			"public",
			"amplify",
			"src/infrastructures/api/*",
			"*.json"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentSize": 2,
		"lineWidth": 110,
		"ignore": [
			"*.js",
			"node_modules",
			".storybook",
			".next",
			".vscode",
			"amplify",
			"src/infrastructures/api/*",
			"*.json"
		],
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"trailingComma": "none",
			"semicolons": "always"
		}
	}
}
